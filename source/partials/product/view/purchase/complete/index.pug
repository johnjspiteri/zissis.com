.modal
	.modal__container
		.modal__headline
			.modal__center
				h1 Thank You For Your Purchase {{::vm.first_name}}!
				
			.modal__paragraph
				p We truly appreciate your support, your order confirmation number is "{{::vm.transaction_id.transaction_id}}". You will receive a confirmation email that will provide information and next steps.

		.modal__reference
			.modal__option.product
				.modal__header
					.modal__center
						h5 Product
				h2(data-ng-bind='::vm.product.title')
					
			.modal__option
				.modal__header
					.modal__center
						h5 Price
				h2(data-ng-bind='"$" + vm.friendly_price')

			.modal__option--gap
			.modal__option
				.modal__header
					.modal__center
						h5 SKU
				h2(data-ng-bind='::vm.product.sku')

		.modal__spacer
			
	.modal__close(ui-sref='app.product.list')
		h6 Close #[span.fa.fa-times]

.backdrop(ui-sref='app.product.list')
