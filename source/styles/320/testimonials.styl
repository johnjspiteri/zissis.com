.testimonials
    float left
    width 100%
    padding 0
    margin 0 0 50px 0
    background $white
    border-top $white-border

.testimonial
    float left
    width 100%
    padding 24px 0 38px 0
    margin 0
    border-bottom $white-border

    &__image
        float left
        width 86px
        height 86px
        margin 0 20px 0 20px
        background $background
        border $white-border
        border-radius 1000%
        overflow hidden

        img
            float left
            width 100%
            height 100%
            padding 0
            margin 0

    p
        width 280px
        padding 0
        margin 0 0 20px 20px
        font-size 17px
        line-height 31px
        font-family $primary-font
        font-weight $primary-font-weight
        color $paragraph
        text-align left

	h6
		float right
		padding 0
		margin 0 60px 0 0
		font-size 18px
		line-height 18px
		font-family $primary-font
		font-weight $primary-font-weight
		color $off-black
