	&__input
		float left
		width 100%
		padding 0
		margin 0 0 22px 0

		input
			float left
			width 236px
			height 50px
			padding 0 10px
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 17px
			color $off-black
			background $input
			border none
			border $input-border
			border-radius $border-radius
			box-shadow none
			apppearance none
			-webkit-appearance none
			outline none
			text-align center

	&__card
		float left
		width 258px
		height: 54px
		padding 0
		margin 0
		background: $white
		border $input-border
		box-sizing: border-box;
		border-radius: 20px
		outline: none
		flex: 1;
		cursor: text

	.InputElement
		float: left
		width 258px
		padding: 0 10px;
		margin 0
		background white;
		box-sizing border-box;
		font-family $primary-font
		font-weight $primary-font-weight
		border $input-border
		border-radius $border-radius
		font-size 27px !important
		color: #32315E;
		outline: none;
		flex: 1;
		height: 48px;
		line-height: 48px;
		cursor: text;

	&__expiry
		float left
		width 124px
		padding 0
		margin 0 0 32px 0

	&__gap
		float left
		width 10px
		height 10px
		padding 0
		margin 0

	button
		float left
		width 258px
		height 54px
		padding 0
		margin 0
		font-family $primary-font
		font-weight $primary-font-weight
		font-size 21px
		color $white
		background $red
		border none
		border-radius $border-radius
		outline none
		text-align center
		cursor pointer

	button[disabled]
		background $black

