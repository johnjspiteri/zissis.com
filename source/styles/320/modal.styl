.modal
	position absolute
	width 300px
	height 100%
	padding 0
	margin 0 0 0 -150px
	top 15px
	left 50%
	z-index 99999

	&__container
		float left
		width 298px
		padding 22px 0 0 0
		margin 0
		background $white
		border $black-border
		border-radius $border-radius

	&__container.ng-invalid
		background $secondary

	&__reference
		float left
		width 236px
		padding 18px 10px 18px 10px
		margin 0 0 0 20px
		background $background
		border $background-border
		border-radius $border-radius

	&__option
		float left
		width 113px
		padding 0
		margin 0

		h2
			float left
			width 111px
			padding 5px 0 6px 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 16px
			line-height 24px
			color $off-black
			background $white
			border $input-border
			border-radius $border-radius
			text-align center

	&__option.product
		width 100%
		margin 0 0 20px 0

		h2
			width 234px

	&__option--gap
		float left
		width 10px
		height 10px

	&__spacer
		float left
		width 100%
		height 20px
		padding 0
		margin 0

	&__tabs
		float left
		width 278px
		height 50px
		padding 0 0 0 20px
		margin 32px 0 0 0
		border none
		border-bottom 1px solid #c8c8c8

	&__tab
		float left
		width 128px
		height 50px
		padding 0
		margin 0
		background $button
		border $black-border
		border-radius 10px 0 0 0

		h4
			float left
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 17px
			line-height 52px
			color $white
			border none
			outline none
			text-align center

	&__tab.active
		height 51px
		background $background
		border $white-border

		h4
			color $off-black

	&__tab.last
		border-left none
		border-radius 0 10px 0 0

	&__form
		float left
		width 258px
		padding 38px 20px 20px 20px
		margin 0
		background $background
		border-radius: $border-radius-bottom

	&__close
		float left
		width 110px
		height 40px
		padding 0
		margin 0 0 20px 140px
		background $black
		border $black-border
		border-top none
		border-radius $border-radius-bottom
		cursor pointer

		h6
			float left
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 16px
			line-height 38px
			color $white
			text-align center

		.fa-times
			padding 0
			margin 0 0 0 8px
			font-size 16px
			color $white

	&__headline
		float left
		width 258px
		padding 0
		margin 0 0 18px 20px
		text-align center

	&__paragraph
		float left
		width 100%
		padding 0
		margin 12px 0 10px 0
		text-align center

		p
			float left
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 16px
			line-height 29px
			color $paragraph
			text-align center

	&__header
		float left
		width 100%
		padding 0
		margin 0 0 10px 0
		text-align center

	&__center
		display inline-block
		position relative
		z-index 99

		h1
			float left
			padding 11px 24px 11px 24px
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 18px
			line-height 26px
			color $off-black
			background #f4f4f4
			border $background-border
			border-radius $border-radius
			text-align center

		h5
			float left
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 15px
			line-height 15px
			color $paragraph
			text-align center

