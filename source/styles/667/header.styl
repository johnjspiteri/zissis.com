.header
	width 100%

	&__holder
		padding 17px 0 15px 0
		margin 0 0 38px 0

	&__content
		width 587px

	&__heart
		width 40px

		.fa-heart
			font-size 21px
			line-height 21px

	&__inline
		display block
		float left
		width 487px
		padding 0
		margin 0

		h1
			float left
			padding 0
			margin 0 14px 0 0
			font-family $primary-font
			font-weight $primary-font-weight
			font-size 18px
			line-height 21px
			color $off-black
			border none
			text-align left

		h2
			float left
			padding 0
			margin 5px 0 0 0
			font-family $primary-font
			font-style: italic
			font-weight $primary-font-weight
			font-size 15px
			line-height 15px
			color #686868
			border none

	&__name
	&__tagline
		display none

	&__mobile
		margin 0

		.fa-bars
			font-size 25px
			line-height 20px
