nav
	position relative
	float right
	margin 12px 0 0 0

.header
	width 1024px
	margin 0 auto

	&__container
		height 67px
		padding 18px 0 0 0
		margin 0 0 38px 0
		background $white
		border-bottom $white-border

	&__holder
		width 178px
		padding 0
		margin 0 0 0 40px
		background none
		border-bottom none

	&__content
		width 244px

	&__navigation
		float right
		width 800px
		padding 0
		margin 0

	&__heart
		width 38px
		margin 0

		.fa-heart
			font-size 20px
			line-height 20px

	&__inline
		display none

	&__brand
		display block
		float left
		width 150px
		margin 0

	&__name
		display block
		width 150px
		margin 0

		h1
			display block
			float left
			padding 0
			margin 0 0 11px 0
			font-size 19px
			line-height 22px
			text-align left

	&__tagline
		display block
		width 280px
		margin 0

		h2
			font-size 15px
			line-height 15px
			margin 0

	&__button
		height 54px
		padding 0 33px
		margin 0
		border-top $white-border
		border-right $white-border
		border-bottom none

		h2
			font-size 15px
			line-height 57px

	&__button.first
		border-radius 10px 0 0 0
		border-left $white-border

	&__button.last
		border-radius 0

	&__button.active
		margin 0
		height 55px
		background $background
		border-top $white-border
		border-right $white-border
		border-bottom none

